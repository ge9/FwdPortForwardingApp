<resources>

    <!--
        Good article: https://android.jlelse.eu/android-developers-we-ve-been-using-themes-all-wrong-eed7755da586#.6ok28b5y0
    -->

    <!-- Dark theme -->

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editRuleTextInputColour">#FFF</item>
        <item name="emptyState">@drawable/empty_state_sloth_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editRuleTextInputColour">#000</item>
        <item name="emptyState">@drawable/empty_state_sloth</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">?attr/editRuleTextInputColour</item>
    </style>

    <style name="tempSpinnerOverride" />

    <style name="EditRuleSwitchBar" parent="Theme.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorSwitchThumbNormal">#4B9AFF</item>
        <item name="android:colorForeground">#FCFCFC</item>
    </style>

    <style name="TextInputTextHint">
        <item name="android:textColorHint">@color/textInputHintColor</item>
        <item name="android:textColor">@color/textInputHintColor</item>
        <item name="android:textColorSecondary">@color/textInputUnderlineColor</item>
        <!--<item name="colorControlNormal">?attr/editRuleTextInputColour</item>-->
        <!--<item name="colorControlActivated">?attr/editRuleTextInputColour</item>-->
        <!--<item name="android:textColorPrimary">?attr/editRuleTextInputColour</item>-->
    </style>

    <style name="SpinnerText">
        <!--<item name="android:color">?attr/editRuleTextInputColour</item>-->
        <item name="colorControlNormal">@color/textInputUnderlineColor</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />





    <!-- SwitchBar -->
    <!-- Used to color the switch bar controls -->
    <style name="ThemeOverlay.SwitchBar" parent="ThemeOverlay.AppCompat">
        <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ThemeOverlay.SwitchBar.Settings" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="switchBarMarginStart">@dimen/switchbar_margin_start</item>
        <item name="switchBarMarginEnd">@dimen/switchbar_margin_end</item>
    </style>

    <style name="ThemeOverlay.SwitchBar.SubSettings" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="switchBarMarginStart">@dimen/switchbar_subsettings_margin_start</item>
        <item name="switchBarMarginEnd">@dimen/switchbar_subsettings_margin_end</item>
    </style>

    <style name="TextAppearance.Switch" parent="TextAppearance.AppCompat.Title" />

    <style name="AppTheme.EmptyState.Title">
        <item name="android:textColor">@color/emptyStateTitleColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.EmptyState.Message">
        <item name="android:textColor">@color/emptyStateMessageColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.EmptyState">

    </style>

</resources>
